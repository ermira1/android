<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
 <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="#0000CC" >
        
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:padding="@dimen/padding_5dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFF" 
        android:layout_weight="10"
        android:text="@string/edit_city"/>
    
        <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="editCity"
        android:textColor="#FFFFFF"
        android:background="#000099"
        
        android:layout_weight="1"
        android:textSize="20sp" 
        
        android:text="@string/edit_button" />
        <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="removeCity"
        android:textColor="#FFFFFF"
        android:background="#000066"
        
        android:layout_weight="1"
        android:textSize="20sp" 
        
        android:text="@string/delete_button" />
        
        <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="displayCity"
        android:textColor="#FFFFFF"
        android:background="#000033"
        
        android:layout_weight="1"
        android:textSize="20sp"  
        
        android:text="@string/view_button" />
    </TableRow>

 <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="40sp" 
        android:layout_marginTop="3dp"
        
        android:layout_below="@+id/tableRow1">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:paddingLeft="@dimen/padding_5dp"
        android:text="@string/city_name" />

    <EditText
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:paddingRight="@dimen/padding_5dp"
        android:layout_weight="1"
        android:ems="10"
        
        android:inputType="text" >

        <requestFocus />
    </EditText>
    </TableRow>
    
<TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="40sp" 
        android:layout_below="@+id/tableRow2">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_5dp"
        android:textSize="15sp"
       android:layout_weight="1"
        android:text="@string/country_name" />

    <EditText
        android:id="@+id/countryName"
         android:paddingRight="@dimen/padding_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>
 </TableRow>


<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="40sp" 
        android:layout_below="@+id/tableRow3">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/padding_5dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/population" />

<EditText
    android:id="@+id/populationNumber"
     android:paddingRight="@dimen/padding_5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:ems="10"
    android:inputType="text" >

        <requestFocus />
    </EditText>
     </TableRow>
     
<TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/tableRow4" >

     
   <TextView
          android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:paddingLeft="@dimen/padding_5dp"
        android:textSize="15sp"
        android:text="@string/traditions" />
    
    <EditText
    android:id="@+id/traditions"
    android:layout_width="wrap_content"
     android:paddingRight="@dimen/padding_5dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:ems="10"
    android:inputType="text" >
            
            <requestFocus />
    </EditText>
    </TableRow>
    
   
<TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/tableRow5" >
     <TextView
          android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_weight="1"
android:textSize="15sp"
       android:paddingLeft="@dimen/padding_5dp"
        android:text="@string/impressions" />
    
    <EditText
    android:id="@+id/impressions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
 android:paddingRight="@dimen/padding_5dp"
    android:ems="10"
    android:inputType="text" >
            
            <requestFocus />
    </EditText>
    </TableRow>
    
<TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="40sp" 
        android:layout_below="@+id/tableRow6">
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
        android:paddingLeft="@dimen/padding_5dp"
        android:text="@string/url_image" />
    <EditText
        android:id="@+id/urlImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
         android:paddingRight="@dimen/padding_5dp"
        android:ems="10"
        android:inputType="text|textLongMessage"   >
         <requestFocus />
    </EditText>
    </TableRow>



</RelativeLayout>


